      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <HBox alignment="CENTER" minWidth="250.0" spacing="20.0">
                     <children>
                        <Label fx:id="lblScoreBlack" alignment="CENTER" maxWidth="1.7976931348623157E308" minWidth="30.0" text="64">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Circle radius="20.0" stroke="#9a9a9a" strokeType="INSIDE" strokeWidth="3.0" />
                     </children>
                  </HBox>
                  <Separator prefWidth="200.0" />
                  <Label fx:id="lblNameBlack" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Human">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <GridPane fx:id="gridPane" gridLinesVisible="true">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
